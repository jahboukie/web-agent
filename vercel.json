{
  "version": 2,
  "builds": [
    {
      "src": "aura/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "webagent-landing/package.json", 
      "use": "@vercel/next"
    },
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/main.py"
    },
    {
      "src": "/landing/(.*)",
      "dest": "/webagent-landing/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/aura/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "DEBUG": "false"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/landing",
      "destination": "/",
      "permanent": false
    }
  ]
}